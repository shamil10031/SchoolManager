<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:background="#FFA02C89">

    <ImageView
        android:layout_marginTop="@dimen/class_vertical_spacing"
        android:id="@+id/img_class"
        android:layout_width="@dimen/class_width"
        android:layout_height="@dimen/class_height"
        android:src="@mipmap/class_nav_background"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="@dimen/class_vertical_spacing"
        android:id="@+id/txt_class"
        android:layout_width="@dimen/class_width"
        android:layout_height="@dimen/class_height"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF"
        android:text="7A"
        android:textSize="67sp"/>

</RelativeLayout>