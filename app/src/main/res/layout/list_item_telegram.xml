<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/telegram"
    android:background="@color/feed_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_marginTop="@dimen/feed_item_margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff2222FF">

        <TextView
            android:id="@+id/link_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="onLinkButton"
            android:text="ccылка на чат Telegram"
            android:textColor="#ffffffff"
            android:textSize="@dimen/feed_item_title_text_size" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/telegram"
            android:scaleType="fitXY"
            android:src="@mipmap/telegram_rect" />

    </FrameLayout>

</LinearLayout>